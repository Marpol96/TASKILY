<h1 class="mt-3">Tabla de retorno</h1>

{{!-- https://getbootstrap.com/docs/4.5/content/tables/ --}}
{{#if cuotas}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Mes</th>
                <th scope="col">Capital</th>
                <th scope="col">Interés</th>
                <th scope="col">Couta (Capital + Interés)</th>
                <th scope="col">Deuda pendiente</th>
            </tr>
        </thead>
        <tbody>
            {{#each cuotas}}
                <tr>
                    <th scope="row">{{mes}}</th>
                    <td>{{capital}}</td>
                    <td>{{interesFixed}}</td>
                    <td>{{cuotaFixed}}</td>
                    <td>{{deuda}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}